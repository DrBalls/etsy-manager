# Etsy Manager Docker Environment Variables
# Copy this file to .env and fill in your values

# ==================================
# Database Configuration
# ==================================
POSTGRES_USER=etsy_user
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=etsy_manager
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ==================================
# Redis Configuration
# ==================================
REDIS_HOST=redis
REDIS_PORT=6379
# Optional: Set a password for Redis
# REDIS_PASSWORD=your-secure-redis-password

# ==================================
# Application Ports
# ==================================
# Web app port (Next.js)
WEB_PORT=3000
# API server port
API_PORT=8000

# ==================================
# NextAuth Configuration
# ==================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# ==================================
# Etsy API Configuration
# ==================================
# Get these from https://www.etsy.com/developers/
ETSY_CLIENT_ID=your-etsy-client-id
ETSY_CLIENT_SECRET=your-etsy-client-secret
ETSY_REDIRECT_URI=http://localhost:3000/api/auth/callback/etsy
API_ETSY_REDIRECT_URI=http://localhost:8000/api/v1/auth/etsy/callback

# ==================================
# JWT Configuration (for API)
# ==================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# ==================================
# Optional: Stripe Configuration
# ==================================
# Get these from https://dashboard.stripe.com/
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ==================================
# Optional: Email Configuration
# ==================================
# For magic link authentication
# EMAIL_SERVER_HOST=smtp.gmail.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@gmail.com
# EMAIL_SERVER_PASSWORD=your-app-password
# EMAIL_FROM=noreply@etsymanager.com

# ==================================
# Optional: Analytics & Monitoring
# ==================================
# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==================================
# Optional: AWS S3 (for file uploads)
# ==================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=etsy-manager-uploads

# ==================================
# Environment Settings
# ==================================
NODE_ENV=production